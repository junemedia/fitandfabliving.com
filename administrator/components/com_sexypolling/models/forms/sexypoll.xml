		  <option value="easeInOutBounce">easeInOutBounce</option>
		</field>
		
		<field type="spacer" default="" />
		<field name="dateformat" type="radio" default="1" label="COM_SEXYPOLLING_DATE_FORMAT_LABEL" description="COM_SEXYPOLLING_DATE_FORMAT_DESCRIPTION" class="btn-group">
		  <option value="1">String</option>
		  <option value="0">Digits</option>
		</field>
		 <field name="autoopentimeline" type="radio" default="1" label="COM_SEXYPOLLING_OPEN_TIMELINE_AUTOMATICALLY_LABEL" description="COM_SEXYPOLLING_OPEN_TIMELINE_AUTOMATICALLY_DESCRIPTION" class="btn-group">
		  <option value="1">JYes</option>
		  <option value="0">JNo</option>
		</field>
		<field name="autoanimate" type="radio" default="0" label="COM_SEXYPOLLING_AUTOANIMATE_FOR_VOTED_POLLS_LABEL" description="COM_SEXYPOLLING_AUTOANIMATE_FOR_VOTED_POLLS_DESCRIPTION" class="btn-group">
		  <option value="1">JYes</option>
		  <option value="0">JNo</option>
		</field>
		<field name="showresultbutton" type="radio" default="1" label="COM_SEXYPOLLING_SHOW_RESULT_BUTTON_LABEL" description="COM_SEXYPOLLING_SHOW_RESULT_BUTTON_DESCRIPTION" class="btn-group">
		  <option value="1">JYes</option>
		  <option value="0">JNo</option>
		</field>
		
		<field type="spacer" default="" />
		<field id="published" name="published" type="list" label="JSTATUS" description="JFIELD_PUBLISHED_DESC" class="inputbox" size="1" default="1">
			<option value="1">JPUBLISHED</option>
			<option value="0">JUNPUBLISHED</option>
			<option value="2">JARCHIVED</option>
			<option value="-2">JTRASHED</option>
		</field>
		<field name="featured" type="radio" label="JFEATURED" description="Featured" default="0" class="btn-group">
			<option value="0">JNo</option>
			<option value="1">JYES</option>
		</field>
		<field name="created" type="calendar" label="COM_SEXYPOLLING_CREATED_LABEL" default="NOW"  description="COM_SEXYPOLLING_CREATED_DESCRIPTION" class="inputbox" size="22" format="%Y-%m-%d %H:%M:%S" filter="user_utc" />
		
		<field type="spacer" default="" />
		<field name="date_start" type="calendar" default="" label="COM_SEXYPOLLING_DATE_START_LABEL" description="COM_SEXYPOLLING_DATE_START_DESCRIPTION" format="%Y-%m-%d" size="22" />
		<field name="date_end" type="calendar" default="" label="COM_SEXYPOLLING_DATE_END_LABEL" description="COM_SEXYPOLLING_DATE_END_DESCRIPTION" format="%Y-%m-%d" size="22" />
